{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Write something about your store here."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Us Section"
    }
  ]
}
{% endschema %}

<section class="about-us-section">
  <div class="about-us-container">
    {% if section.settings.image != blank %}
      <div class="about-us-image">
        <img src="{{ section.settings.image | image_url: width: 600 }}" alt="About us">
      </div>
    {% endif %}
    <div class="about-us-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.content }}</p>
    </div>
  </div>
</section>

